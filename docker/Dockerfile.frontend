FROM node:20-alpine

WORKDIR /app

# Copy package files and proxy config
COPY package*.json proxy.conf.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 4200

# Start development server with proxy config
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--proxy-config", "proxy.conf.json"]